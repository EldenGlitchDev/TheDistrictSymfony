{% extends 'base.html.twig' %}

{% block title %}Plats par catégorie{% endblock %}

{% block body %}

<div class="container">
		<div class="row g-0">
			<img src="/img/bg1.jpeg" alt="bandereau" title="bandereau" id="imageBandereau">
		</div>
	</div><br>

{% for plat in plats %}

<div class=container>
  <div class="row justify-content-center g-0">
  <div class="card mb-3" style="max-width: 1000px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{ asset ('/img/food/' ~ plat.image) }}" class="img-fluid rounded-start border border-dark border-4 imageComm" alt="{{ plat.libelle }}">
      </div>
      <div class="col-md-8 cardscolor">
        <div class="card-body">
          <h5 class="card-title txtcolor">{{ plat.libelle }}</h5>
          <p class="card-text txtcolor">{{ plat.description }}</p>
          <p class="card-text txtcolor">Prix :<b>{{ plat.prix }} €</b></p>
          <div class="d-flex justify-content-end">
            <div class="d-flex justify-content-end">
				<button type="submit" name="comm" class="btn btn-primary" value="#" id="boutoncommander">Commander</button>
			</div>
          </div>
        </div>
      </div>
    </div>
  </div></div><div>

  {% endfor %}

{% endblock %}
