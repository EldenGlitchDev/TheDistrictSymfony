{% extends 'base.html.twig' %}

{% block title %}Votre commande
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row g-0">
			<img src="{{ asset ('img/bg1.jpeg') }}" alt="bandereau" title="bandereau" id="imageBandereau">
		</div>
	</div>
	<div class="container">
		<div class="row g-0">
			<section class="container" id="background-img">
				<div class="row g-0">

					<div class="container">
						<div class="row">


							<p class="row g-0 mt-5 pt-5 mx-3 justify-content-start" id="champsObl">Les champs ayant une * sont obligatoires à remplir !</p>

							{{ form_start(form) }}

							<div class="container boxCommandeTextType">
								<div class=" row mb-5 fs-5 col-8 text-center">
									{{ form_label(form.nom) }}
									{{ form_widget(form.nom) }}
									{% if form.nom.vars.errors|length > 0 %}
										<div class="container">
											<div class="row containerErrorForm">
												<div class="class-for-errors">
													{{ form_errors(form.nom) }}
												</div>
											</div>
										</div>
									{% endif %}


									{{ form_label(form.prenom) }}
									{{ form_widget(form.prenom) }}
									{% if form.prenom.vars.errors|length > 0 %}
										<div class="container">
											<div class="row containerErrorForm">
												<div class="class-for-errors">
													{{ form_errors(form.prenom) }}
												</div>
											</div>
										</div>
									{% endif %}
								</div>
							</div>


							<div class="container boxCommandeTextType">
								<div class="row mb-5 fs-5 col-8 text-center">
									{{ form_label(form.email) }}
									{{ form_widget(form.email) }}
									{% if form.email.vars.errors|length > 0 %}
										<div class="container">
											<div class="row containerErrorForm">
												<div class="class-for-errors">
													{{ form_errors(form.email) }}
												</div>
											</div>
										</div>
									{% endif %}


									{{ form_label(form.telephone) }}
									{{ form_widget(form.telephone) }}
									{% if form.telephone.vars.errors|length > 0 %}
										<div class="container">
											<div class="row containerErrorForm">
												<div class="class-for-errors">
													{{ form_errors(form.telephone) }}
												</div>
											</div>
										</div>
									{% endif %}
								</div>
							</div>

<div class="container boxCommandeTextareaType">
							<div class="row mx-1 mb-5 fs-5 col-8 text-center">
								{{ form_label(form.adresse_facturation) }}
								{{ form_widget(form.adresse_facturation) }}
							</div>
							</div>

<div class="container boxCommandeTextareaType">
							<div class="row mx-1 mb-5 fs-5 col-8 text-center">
								{{ form_label(form.adresse_livraison) }}
								{{ form_widget(form.adresse_livraison) }}
							</div>
							</div>

<div class="container boxCommandeTextareaType">
							<div class="row mx-1 mb-5 fs-5 col-8 text-center">
								{{ form_label(form.mode_paiement) }}
								<div class="container">
									<div class="row justify-content-center backgroundTitleCommande">
										<i class="col-4 fa-brands fa-cc-visa fa-bounce"></i>
										<i class="col-4 fa-brands fa-cc-mastercard fa-bounce" style="color: #e01b24;"></i>
										<i class="col-4 fa-brands fa-paypal fa-bounce" style="color: #1a5fb4;"></i>
									</div>
								</div>
								{{ form_widget(form.mode_paiement) }}
							</div>
							</div>

							<div class="container">
								<div class="row mt-3 text-end">
									{{ form_row(form.envoyer) }}
								</div>
							</div>

							<p id="CGU">Veuillez lire
								<a href="{{ path('app_cgu') }}" target="_blank" id="CGUHypertext">ici</a>
								les Conditions Générales d'Utilisation (CGU) avant de les accepter.</p>


						</div>


					</div>


					{{ form_end(form) }}


				</div>
			</section>
		</div>
	</div>
{% endblock %}
