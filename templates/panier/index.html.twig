{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	<section>
		<div class="container">
			<div class="row">
				<p id="votrePanier">Votre panier :</p>
			</div>
		</div>
		<div class="container">
			<div class="row g-0">
				<img src="{{ asset ('/img/bg.jpg') }}" alt="bandereau" title="bandereau" id="imageBandereauPanier">

			</div>
		</div>
	</section>
	<br>


	<div class="container">
		<div class="row col-12">


			{% for element in dataPanier %}

				<table class="table table-bordered mx-2">

					<tbody>
						<tr>
							<td class="TxtPanier col-5 text-center align-middle"><b>{{ element.plat.libelle }}</b></td>
							<td class="TxtPanier col-2 text-center align-middle"><b>{{ element.quantite }}</b></td>
							<td class="TxtPanier col-4 text-center align-middle">
								<b>Prix : {{ element.plat.prix }}â‚¬</b>
							</td>
							<td class="col-2">
							<a href="{{ path("app_ajout_panier", {id: element.plat.id}) }}"><img src="{{ asset ('img/Icones/iconeAdd.png') }}" alt="iconeAdd" id="iconesPanier"></a>
							<a href="{{ path('app_enlever_panier', {id: element.plat.id}) }}"><img src="{{ asset ('img/Icones/iconeRemove.png') }}" alt="iconeRemove" id="iconesPanier"></a>
							<a href="{{ path('app_supprimer_panier', {id:element.plat.id}) }}"><img src="{{ asset ('img/Icones/iconeDelete.png') }}" alt="iconeDelete" id="iconesPanier"></a>
							</td>
						</tr>
					</tbody>
				</table>



			{% endfor %}

				<a class="nav-link" aria-current="page" href="{{ path('app_commande') }}">Passer la commande</a>

				<a class="nav-link" aria-current="page" href="{{ path('app_supprimer_tout_panier') }}">Vider la panier</a>
		</div>
	</div>

{% endblock %}
