{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	<section>
		<div class="container">
			<div class="row">
				<p id="votrePanier">Votre panier :</p>
			</div>
		</div>
		<div class="container">
			<div class="row g-0">
				<img src="{{ asset ('/img/bg.jpg') }}" alt="bandereau" title="bandereau" id="imageBandereauPanier">

			</div>
		</div>
	</section>
	<br>


	<div class="container">
		<div class="row col-12">


			{% for element in dataPanier %}

				<table class="table table-bordered mx-2">

					<tbody>
						<tr>
							<td class="couleurTxtPanier col-5"><b>{{ element.plat.libelle }}</b></td>
							<td class="couleurTxtPanier col-5">
								<b>Prix : {{ element.plat.prix }}â‚¬</b>
							</td>
							<td class="col-1"><a href="{{ path('app_enlever_panier', {id: element.id}) }}"><img src="{{ asset ('img/Icones/iconeDelete.png') }}" alt="iconeDelete" id="iconeDelete"></a></td>
						</tr>
					</tbody>
				</table>



			{% endfor %}

				<a class="nav-link" aria-current="page" href="{{ path('app_commande') }}">Passer la commande</a>

				<a class="nav-link" aria-current="page" href="{{ path('app_supprimer_tout_panier') }}">Vider la panier</a>
		</div>
	</div>

{% endblock %}
